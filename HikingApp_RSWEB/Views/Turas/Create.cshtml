@model HikingApp_RSWEB.Models.Tura

@{
    ViewData["Title"] = "Create";
}

<h1>Додади нова тура</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mesto" class="control-label"></label>
                <input asp-for="Mesto" class="form-control" />
                <span asp-validation-for="Mesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumPocetok" class="control-label"></label>
                <input asp-for="DatumPocetok" class="form-control" />
                <span asp-validation-for="DatumPocetok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumKraj" class="control-label"></label>
                <input asp-for="DatumKraj" class="form-control" />
                <span asp-validation-for="DatumKraj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tezina" class="control-label"></label>
                <input asp-for="Tezina" class="form-control" />
                <span asp-validation-for="Tezina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vremetraenje" class="control-label"></label>
                <input asp-for="Vremetraenje" class="form-control" />
                <span asp-validation-for="Vremetraenje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstVodichId" class="control-label"></label>
                <select asp-for="FirstVodichId" class ="form-control" asp-items="ViewBag.FirstVodichId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SecoundVodichId" class="control-label"></label>
                <select asp-for="SecoundVodichId" class ="form-control" asp-items="ViewBag.SecoundVodichId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Bрати назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
