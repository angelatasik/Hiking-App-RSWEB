@model HikingApp_RSWEB.ViewModel.NewRezzViewModel

<h1>Нова резервација:</h1>
<hr />
<form asp-action="NewRezz">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Тури</label>
                <select class="form-control" asp-for="TuraId" asp-items="Model.Turi">
                </select>
            </div>


            <div class="form-group">
                <label asp-for="SelectedPlaninari" class="control-label"></label>
                <select asp-for="SelectedPlaninari" class="form-control js-example-basic-multiple" asp-items="Model.Planinari">
                </select>
                <span asp-validation-for="SelectedPlaninari" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-secondary" />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Bрати назад</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    
 }