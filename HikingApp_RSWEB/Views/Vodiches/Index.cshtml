@model HikingApp_RSWEB.ViewModel.FiltrirajVodichi

@{
    ViewData["Title"] = "Index";
}

<h1>Водичи</h1>

<p>
    <a asp-action="Create">Додади нов водич</a>
</p>


<p>
    <a>Филтрирај по:</a>
</p>

<form asp-controller="Vodiches" asp-action="Index" method="get">
    <p>
        Позиција: 
        <select asp-for="SearchPozicija" asp-items="Model.Pozicii">
            <option value="">Сите</option>
        </select>

        <input type="submit" value="Филтрирај" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vodichi[0].Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vodichi[0].Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vodichi[0].Pozicija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vodichi[0].Vozrast)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vodichi)
        {
            <tr>
                <td>
                    @if (item.ProfilePicture != null)
                    {
                        <img src="~/images/@item.ProfilePicture"
                             class="rounded-circle"
                             height="100" width="100"
                             asp-append-version="true" /> }
                    else
                    {
                        <img src="~/images/nopicture.jpg"
                             class="rounded-circle"
                             height="100" width="100"
                             asp-append-version="true" />}
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pozicija)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vozrast)
                </td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Промени</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
                </td>
            </tr>
        }
    </tbody>
</table>
